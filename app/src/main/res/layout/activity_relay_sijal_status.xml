<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/strana_relea"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="0dp"
    android:layout_marginLeft="0dp"
    android:layout_marginTop="0dp"
    android:background="@drawable/bg_gradient"
    android:visibility="visible"

    tools:context=".RelayStatus">

    <DigitalClock
        android:id="@+id/digitalClock2"
        android:layout_width="135dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="142dp"
        android:layout_marginLeft="142dp"
        android:layout_marginTop="652dp"
        android:gravity="center"
        android:textColor="#3E2723"
        android:textSize="34sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="23dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="180dp"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="140dp"
        android:layout_marginBottom="92dp"
        android:text="@string/ukljuci"
        android:textColor="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:layout_marginTop="170dp"
        android:gravity="fill_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/dugme"
            android:layout_width="78dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:foreground="@drawable/dugme"
            android:text="Button"
            app:backgroundTint="@android:color/transparent" />

        <TextView
            android:id="@+id/relay1text"
            android:layout_width="78dp"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:layout_weight="1"
            android:fontFamily="sans-serif-thin"
            android:gravity="center"
            android:text="1"
            android:textColor="#FFFFFF"
            android:textSize="50sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/dugmeuklj"
            android:layout_width="78dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:foreground="@drawable/dugmeuklj"
            android:text="Button"
            app:backgroundTint="@android:color/transparent" />

        <TextView
            android:id="@+id/relay1text2"
            android:layout_width="78dp"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:layout_weight="1"
            android:fontFamily="sans-serif-thin"
            android:gravity="center"
            android:text="Klima"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/Status_R1"
            android:layout_width="78dp"
            android:layout_height="match_parent"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            android:layout_weight="1"
            android:contentDescription="status1rele"
            android:scaleX="1"
            android:scaleY="1"
            android:visibility="visible"
            app:srcCompat="@drawable/sivo"
            tools:visibility="visible" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:layout_marginTop="270dp"
        android:gravity="fill_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/dugme2"
            android:layout_width="78dp"
            android:layout_height="match_parent"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:foreground="@drawable/dugme"
            android:gravity="center_vertical"
            android:text="Button"
            app:backgroundTint="@android:color/transparent" />

        <TextView
            android:layout_width="78dp"
            android:layout_height="match_parent"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:layout_weight="1"
            android:fontFamily="sans-serif-thin"
            android:gravity="center_horizontal"
            android:text="2"
            android:textColor="#FFFFFF"
            android:textSize="50sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/dugmeuklj2"
            android:layout_width="78dp"
            android:layout_height="match_parent"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:foreground="@drawable/dugmeuklj"
            android:text="Button"
            app:backgroundTint="@android:color/transparent" />

        <TextView
            android:id="@+id/relay1text4"
            android:layout_width="78dp"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:layout_weight="1"
            android:fontFamily="sans-serif-thin"
            android:gravity="center"
            android:text="Bojler"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/Status_R2"
            android:layout_width="78dp"
            android:layout_height="match_parent"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:layout_weight="1"
            android:visibility="visible"
            app:srcCompat="@drawable/sivo"
            tools:visibility="visible" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:layout_alignParentTop="false"
        android:layout_marginTop="370dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/dugme3"
            android:layout_width="78dp"
            android:layout_height="match_parent"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:foreground="@drawable/dugme"
            android:text="Button"
            app:backgroundTint="@android:color/transparent" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="78dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="sans-serif-thin"
            android:gravity="center_horizontal"
            android:text="3"
            android:textColor="#FFFFFF"
            android:textSize="50sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/dugmeuklj3"
            android:layout_width="78dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:foreground="@drawable/dugmeuklj"
            android:text="Button"
            app:backgroundTint="@android:color/transparent" />

        <TextView
            android:id="@+id/relay1text3"
            android:layout_width="78dp"
            android:layout_height="match_parent"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:layout_weight="1"
            android:fontFamily="sans-serif-thin"
            android:gravity="center"
            android:text="Pumpa"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/Status_R3"
            android:layout_width="78dp"
            android:layout_height="match_parent"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:layout_weight="1"
            android:scaleX="1"
            android:scaleY="1"
            android:visibility="visible"
            app:srcCompat="@drawable/sivo"
            tools:visibility="visible" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:layout_marginTop="470dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/dugme4"
            android:layout_width="78dp"
            android:layout_height="match_parent"
            android:foreground="@drawable/dugme"
            android:text="Button"
            app:backgroundTint="@android:color/transparent"
            app:elevation="2dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="78dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="sans-serif-thin"
            android:gravity="center_horizontal"
            android:text="4"
            android:textColor="#FFFFFF"
            android:textSize="50sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/dugmeuklj4"
            android:layout_width="78dp"
            android:layout_height="match_parent"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:foreground="@drawable/dugmeuklj"
            android:text="Button"
            app:backgroundTint="@android:color/transparent" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="78dp"
            android:layout_height="match_parent"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:layout_weight="1"
            android:fontFamily="sans-serif-thin"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/svetlo_spolja"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/Status_R4"
            android:layout_width="78dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleX="1"
            android:scaleY="1"
            android:visibility="visible"
            app:srcCompat="@drawable/sivo"
            tools:visibility="visible" />
    </LinearLayout>

    <Button
        android:id="@+id/sms_button"
        android:layout_width="171dp"
        android:layout_height="wrap_content"
        android:layout_alignWithParentIfMissing="false"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="false"
        android:layout_alignParentBottom="false"
        android:layout_marginStart="116dp"
        android:layout_marginLeft="116dp"
        android:layout_marginTop="598dp"
        android:background="#3F51B5"
        android:fontFamily="sans-serif-thin"
        android:gravity="center|center_horizontal"
        android:onClick="checkRelayStatus"
        android:text="Refresh"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:visibility="visible"
        app:backgroundTint="#2196F3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/address"
        android:layout_width="216dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="97dp"
        android:layout_marginLeft="97dp"
        android:layout_marginTop="13dp"
        android:text="Commands and Relay Status"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        tools:layout_marginLeft="150dp" />

    <TextView
        android:id="@+id/status"
        android:layout_width="108dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:layout_marginStart="162dp"
        android:layout_marginLeft="162dp"
        android:layout_marginTop="63dp"
        android:text="Ručići"
        android:textColor="#FFFFFF"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="23dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="18dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="140dp"
        android:layout_marginBottom="92dp"
        android:text="Isključi"
        android:textColor="@color/white" />

</RelativeLayout>